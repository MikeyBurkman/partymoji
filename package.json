{
  "name": "partymoji",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "homepage": "https://mikeyburkman.github.io/partymoji/",
  "repository": {
    "url": "https://github.com/MikeyBurkman/partymoji"
  },
  "scripts": {
    "dev": "pnpm build:wasm && vite",
    "build": "tsc -b && vite build && pnpm copy-docs",
    "build:wasm": "wasm-pack build gif/gif_encoder_wasm --target bundler --dev",
    "build:wasm:prod": "wasm-pack build gif/gif_encoder_wasm --target bundler --release",
    "build:all": "pnpm build:wasm && pnpm build",
    "build:all:prod": "pnpm build:wasm:prod && pnpm build",
    "lint": "tsc && eslint .",
    "preview": "vite preview",
    "preview:watch": "concurrently \"vite preview\" \"vite build --watch\"",
    "copy-docs": "rimraf docs && cp -R dist docs",
    "pretty": "prettier --write \"**/*.{js,md,ts,html,tsx,json}\"",
    "preinstall": "npx --yes only-allow pnpm",
    "prepare": "husky"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@types/file-saver": "^2.0.7",
    "@types/get-pixels": "^3.3.4",
    "@types/seedrandom": "^3.0.8",
    "bezier-easing": "^2.1.0",
    "color-convert": "^3.0.1",
    "file-saver": "^2.0.5",
    "get-pixels": "^3.3.3",
    "gif-encoder": "^0.7.2",
    "gif_encoder_wasm": "link:gif/gif_encoder_wasm/pkg",
    "gifuct-js": "^2.1.2",
    "mobile-detect": "^1.4.5",
    "react": "^19.1.0",
    "react-best-gradient-color-picker": "^3.0.14",
    "react-dom": "^19.1.0",
    "remeda": "^0.0.30",
    "seedrandom": "^3.0.5",
    "vite-plugin-wasm": "^3.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/color-convert": "^2.0.4",
    "@types/file-saver": "^2.0.7",
    "@types/gif-encoder": "^0.7.4",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.24.0",
    "eslint-plugin-react-dom": "^1.46.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-react-x": "^1.46.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.29.1",
    "vite": "^6.2.6",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "packageManager": "pnpm@10.7.0"
}
